import java.util.*;
public class Fence
{
    public static void main(String args[])
    {
       Scanner sc=new Scanner(System.in);
       int a=sc.nextInt();
       int b=sc.nextInt();
       int s=2*a+2*b;
       int c=a*b;
       System.out.printf("\nRequired length is %d m",s);
       System.out.printf("\nRequired quantity of carpet is %d sqm",c);
    }
}
