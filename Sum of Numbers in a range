import java.util.*;
public class Sumofnum
{
    public static void main(String[] args)
    {
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        int m=sc.nextInt();
        int sum=0;
        for(int i=0;i<=m;i++)
        {
            sum=sum+i;
        }
        System.out.println(sum);
    }
}
