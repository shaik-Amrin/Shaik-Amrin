import java.util.*;
public class Football
{
    public static void main(String args[])
    {
        //write your code
        Scanner sc=new Scanner(System.in);
        int l=sc.nextInt();
        int b=sc.nextInt();
        int c=2*(l+b);
        int d=l*b;
        System.out.println(c);
        System.out.println(d);
    }
}
